   * Add an address to the blacklist list
   */
  function addAddressWithoutFees(address addr) public onlyOwner {
    _editAddressWithoutFees(addr, true);
  }
  
  /**
   * Remove an address to the blacklist list
   */
  function removeAddressWithoutFees(address addr) public onlyOwner {
    _editAddressWithoutFees(addr, false);
  }
  
  /**
   * Edit the ecosystem address
   */
  function editEcosystemAddress(address newAddr) public onlyOwner {
    require(newAddr != address(0), "BEP20: zero address can't use for the ecosystem address");
    
    _balances[newAddr] = _balances[_ecosystemAddress];
    _balances[_ecosystemAddress] = 0;
    _ecosystemAddress = newAddr;
  }
  
  /**
   * Edit the ecosystem fees
   */
  function editEcosystemFee(uint256 newFee) public onlyOwner {
    require(newFee >= 0 && newFee <= 100, "BEP20: only between 0% -> 100%");
    
    _ecosystemFee = newFee;
  }
  
  /**
   * Edit blacklist address
   */
  function _blacklist(address addr, bool allow) internal {
      require(addr != address(0), "BEP20: blacklist from the zero address");
      
      _blacklists[addr] = allow;
  }
  
  /**
   * Edit the list of address without fees
   */
  function _editAddressWithoutFees(address addr, bool allow) internal {
      _addressWithoutFees[addr] = allow;
  }

  /**
   * @dev Moves tokens `amount` from `sender` to `recipient`.
   *
